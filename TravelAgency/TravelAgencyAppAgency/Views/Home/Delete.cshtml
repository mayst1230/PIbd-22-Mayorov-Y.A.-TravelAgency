@model TravelAgencyBusinnesLogic.ViewModels.AgencyViewModel

@{ ViewData["Title"] = "Delete"; }

<h1>Удаление</h1>

<h3>Вы действительно хотите удалить эту запись?</h3>
<div>
    <hr />
    <div class="row">
        <div class="col-6">
            <dl class="row">
                <dt class="col-sm-10">
                    @Html.DisplayNameFor(model => model.AgencyName)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.AgencyName)
                </dd>
                <dt class="col-sm-10">
                    @Html.DisplayNameFor(model => model.FullNameResponsible)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.FullNameResponsible)
                </dd>
            </dl>
            <form method="post">
                <input type="hidden" name="Id" value="@Model.Id" />
                <input type="submit" value="Удалить" class="btn btn-danger" /> |
                <a asp-action="Index">Назад</a>
            </form>
        </div>
        <div class="col-md-6">
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            Условие
                        </th>
                        <th>
                            Количество
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.AgencyConditions)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Value.Item1)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Value.Item2)
                            </td>
                        </tr>
}
                </tbody>
            </table>
        </div>
    </div>